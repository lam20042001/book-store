<% layout('./layouts/user-boilerplate') -%>

    <div class="container mt-5 mb-5">
        <div class="row d-flex justify-content-start shadow-lg p-4">
            <div class="col-md-7 col-lg-5 p-3">
                <div class="container">
                    <div class="text-center image-product">
                        <img class="image-responsive img-fluid" id="main-image"
                            src="/public/images/product-img/<%=product.image%>" width="350" />
                    </div>
                </div>
            </div>
            <div class="col-md-5 col-lg-5 p-4 ml-auto">
                <div>
                    <div class=" mb-3">
                        <h2 class="">
                            <%= product.title%>
                        </h2>

                        <div class="d-flex flex-row align-items-center">
                            <span class="fs-5 text">
                                Author: <%= product.author%>
                            </span>
                        </div>
                        <div class="d-flex flex-row align-items-center">
                            <span class="fs-5 text">
                                Genre: <%= product.category%>
                            </span>
                        </div>
                        <div class="d-flex flex-row align-items-center">
                            <span class="fs-5 text">
                                Pubish year: <%= product.year%>
                            </span>
                        </div>
                    </div>
                    <p class="about">
                        <%= product.description%>
                    </p>
                    <div class="d-flex flex-row align-items-center">
                        <span class="fs-3 text">
                            Price: <%= product.price%>
                        </span>
                    </div>

                    <div class="mt-4 align-items-center">
                        <button onclick="addToCart('<%=product._id%>')"
                            class="btn text-uppercase mr-2 border border-dark">Add to cart</button>
                        <button onclick="addToWishlist('<%=product._id%>')" class="btn border border-dark">
                            <i class="fa fa-heart text-dark"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>