    <section class="wishlist">
        <h1 class="title"> My Wishlist </h1>


        <% if (list && list.wishlist.length> 0) { %>
            <div class="wish-box row">
                <% list.wishlist.forEach(function(w) { %>
                    <div class="col-md-3 mb-4">
                        <div class="card product-card">
                            <img src="/public/images/product-img/<%=w.product.image%>" alt=""
                                class="card-img-top img-fluid">
                            <div class="card-body">
                                <h3>
                                    <%=w.product.title%>
                                </h3>
                                <div class="price">
                                    Price: <%= w.product.price %>
                                </div>
                                <div class="btn-group d-flex justify-content-center" role="group"
                                    aria-label="Product Actions">
                                    <button class="btn btn-primary"
                                        onclick="addToCartAndRemove('<%=w.product._id%>')">Add
                                        to Cart</button>
                                    <button class="btn btn-danger confirmDeletion"
                                        onclick="removeFromWishlist('<%=w.product._id%>')"><i
                                            class="fas fa-times"></i></button>
                                </div>
                            </div>

                        </div>
                    </div>
                    <% }) %>
            </div>
            <% } else { %>
                <h2 class="text-center pt-5">Wishlist is empty</h2>
                <% } %>



    </section>